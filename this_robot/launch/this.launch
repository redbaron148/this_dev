<launch>

	<arg name="visualize" default="true"/>

	<include file="$(find this_robot)/launch/scan_filter.launch"/>
	
	<node if="$(arg visualize)" pkg="rviz" type="rviz" name="rviz" />
	
	<node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="0.1651 0 0.03175 0 0 3.14159 base_link laser 15"/>
	
	<node pkg="irobot_create_2_1" type="driver.py" name="create_driver">
		<param name="port" value="/dev/ttyUSB1" />
	</node>
	
	<node if="$(arg visualize)" pkg="this_robot" type="visualizer" name="this_vis" output="screen"/>
</launch>
