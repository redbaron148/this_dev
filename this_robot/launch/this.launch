<launch>

	<!--include file="$(find learning_joy)/teleop.launch"/-->
	
	
	<node pkg="hokuyo_node" type="hokuyo_node" name="hokuyo_node">
		<param name="min_ang" value="-1.871" />
		<param name="max_ang" value="1.951" />
		<param name="cluster" value="1" />
		<param name="skip" value="0" />
		<param name="port" value="/dev/ttyACM0" />
		<param name="calibrate_time" value="true" />
		<param name="frame_id" value="laser" />
	</node>
	
	<node pkg="rviz" type="rviz" name="rviz" />
	
	<node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="-0.1651 0 0.03175 3.14159 0 3.14159 base_link laser 15"/>
	
	<node pkg="irobot_create_2_1" type="driver.py" name="create_driver">
		<param name="port" value="/dev/ttyUSB0" />
	</node>
</launch>
